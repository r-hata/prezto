#
# Executes commands at the start of an interactive session.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
#

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...
# Display Current Directory on WSL Terminal Titlebar.
if [[ $(uname -a) == Linux*Microsoft* ]]; then
  echo -ne "\e]0;  $(prompt-pwd)\007"
  chpwd(){echo -ne "\e]0; $(prompt-pwd)\007"}
fi

# Append PATH
if [ -d ${HOME}/.rbenv ]; then
  # Initialize rbenv
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init -)"
fi
if [ -d ${HOME}/.nodebrew ]; then
  # Initialize nodebrew
  export PATH="$HOME/.nodebrew/current/bin:$PATH"
fi
if [ -d ${HOME}/.go ]; then
  export PATH="$HOME/.go/bin:$PATH"
fi
# Resolve duplicate paths
typeset -U path PATH

# go-lang setting
export GOPATH=$HOME/.go

# Set alias
# ls
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls -F --color=auto'
fi

# Setting plugins
# fzf
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
export FZF_DEFAULT_COMMAND='ag --follow --hidden --ignore-dir ".git" -g "" 2>/dev/null'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
