#
# Executes commands at the start of an interactive session.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
#

# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...
# Append PATH
# Initialize linuxbrew
if [[ -d /home/linuxbrew ]]; then
  export PATH="/home/linuxbrew/.linuxbrew/bin:$PATH"
  export PATH="/home/linuxbrew/.linuxbrew/sbin:$PATH"
fi
# Initialize rbenv
if [[ -d ${HOME}/.rbenv ]]; then
  export PATH="$HOME/.rbenv/bin:$PATH"
  eval "$(rbenv init -)"
fi
# go-lang setting
[[ -n ${HOME}/go ]] && export PATH="$HOME/go/bin:$PATH"
# Initialize nodebrew
[[ -d ${HOME}/.nodebrew ]] && export PATH="$HOME/.nodebrew/current/bin:$PATH"
# Initialize nodenv
if [[ -d ${HOME}/.nodenv ]]; then
  export PATH="$HOME/.nodenv/bin:$PATH"
  eval "$(nodenv init -)"
fi
# github CLI setting
if type "hub" > /dev/null 2>&1; then
  eval "$(hub alias -s)"
fi

# Resolve duplicate paths
typeset -U path PATH

# Set alias
# ls
if [[ -x /usr/bin/dircolors ]]; then
  test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
  alias ls='ls -F --color=auto'
fi

# Setting plugins
# fzf
[[ -f ~/.fzf.zsh ]] && source ~/.fzf.zsh
if type rg > /dev/null 2>&1; then
  export FZF_DEFAULT_COMMAND="rg --files --follow --hidden -g '!**/.git/*' 2>/dev/null"
  export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
fi
